@using EntityLayer
@model List<Student>


<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Order Status</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th> Öğrenci No </th>
                            <th> Öğrenci Adı </th>
                            <th> Öğrenci Soyadı </th>
                        </tr>
                    </thead>
                    @{
                        foreach (var item in Model)
                       {
                    <tbody>
                        <tr>
                            <td> @item.StudentID</td>
                            <td> @item.SName</td>
                             <td> @item.SSurname</td>
                            <td>
                                        <a asp-controller="Student" asp-action="Update" asp-route-id="@item.StudentID" class="badge badge-outline-warning">
                                            Update
                                        </a>

                                        <a asp-controller="Student" asp-action="Delete" asp-route-id="@item.StudentID" class="badge badge-outline-danger">
                                            Delete
                                        </a>
                            </td>
                        </tr>
                    </tbody>
                        }
                    }
                </table>
            </div>
        </div>
    </div>
</div>